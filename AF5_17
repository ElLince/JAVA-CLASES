        Scanner sc = new Scanner(System.in).useLocale(Locale.US);
        int t1[] = new int[0];
        int t2[] = {0, 1, 2, 3}; // 4-2=2 2+1=3;
        int t3[] = {0, 1, 2, 3, 4}; // 5-2=3 3+1=4 
        int t4[] = {0, 1, 2, 3, 4, 5};
        int n = 3;
        int s = 0;
        int st = 0;

        for (int i = 0; i < t4.length - n; i++) {
            s = 0;
            for (int j = i; j < n + i; j++) {
                s = s + t3[j];
            }
            st = s;
        }
    }
}
