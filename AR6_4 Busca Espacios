        Scanner sc =  new Scanner(System.in);
        char c;
        int n1=0;
        System.out.println("Escribir frase:");
        String s1 = sc.nextLine();
        for (int i = 0; i < s1.length(); i++) {
            if (s1.charAt(i)==' ') n1++;
//          if (character.isSpaceChar(s1)) n1++;
        }
        System.out.println("Los nÂº de espacios en blanco son: "+n1);
        }

